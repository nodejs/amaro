{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"noEmit": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2023"],
		"module": "NodeNext",
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"verbatimModuleSyntax": true,
		"allowImportingTsExtensions": true,
		"strict": true,
		"target": "ES2022"
	}
}
